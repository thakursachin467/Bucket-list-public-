<form class="form-signin" action="/login" method="post">
        <h2 class="form-signin-heading">Please sign in</h2>
        <label for="inputEmail" class="sr-only ">Email address</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Email address" name="email" required autofocus>
        <label for="inputPassword" class="sr-only " >Password</label>
        <input type="password" id="inputPassword" class="form-control mt-4" placeholder="Password" name="password" required>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="remember-me mt-4"> Remember me
          </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">Sign in</button>
    </form>
