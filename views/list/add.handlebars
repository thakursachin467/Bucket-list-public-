{{> _error}}
<div class="card card-body">
  <h3>Add Bucket-list Item</h3>
  <form action="/list/add" method="post">
    <div class="form-group">
      <label for="exampleInputEmail1">Title</label>
      <input type="text" class="form-control" name="title" required >
      <small id="emailHelp" class="form-text text-muted">Add the title for your bucket-list here.</small>
    </div>
    <div class="form-group">
      <label >Description</label>
      <textarea class="form-control" rows="5" id="comment" name="details" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary ">Add</button>
  </form>
</div>
